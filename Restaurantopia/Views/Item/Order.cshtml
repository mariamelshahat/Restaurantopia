@model Restaurantopia.Entities.Models.Item

@{
    ViewData["Title"] = "Order";
}

<h1>Order</h1>

<h3>Are you sure you want to Order this?</h3>
<div>
    <h4>Item</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ItemTitle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ItemTitle)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ItemDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ItemDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ItemImage)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ItemImage)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ItemPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ItemPrice)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CategoryId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CategoryId)
        </dd>
    </dl>

    <form asp-action="Order" method="post">
        @Html.HiddenFor(model => model.Id) <!-- Include the item ID -->
        @Html.HiddenFor(model => model.ItemPrice) <!-- Include the item price -->
        @Html.HiddenFor(model => model.ItemTitle) <!-- Include the item title -->
        @Html.HiddenFor(model => model.ItemDescription) <!-- Include the item description -->
        @Html.HiddenFor(model => model.ItemImage) <!-- Include the item image -->
        @Html.HiddenFor(model => model.CategoryId) <!-- Include the category ID -->

        <div class="form-group">
            <label asp-for="Quantity" class="control-label"></label>
            <input asp-for="Quantity" class="form-control" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>

        <input type="submit" value="Create Order" class="btn btn-primary" />
        <a asp-action="ListOfItems" class="btn btn-secondary">Back to List</a>
    </form>
</div>
