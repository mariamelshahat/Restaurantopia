@model IEnumerable<Restaurantopia.Entities.Models.OrderDetails>

@{
    ViewData["Title"] = "My Orders";
    Layout = "_OrderDetailsPage";
}

<h1>My Orders</h1>

<table class="table table-striped table-bordered custom-table">
    <thead>
        <tr>
            <th>Item</th>
            <th>Quantity</th>
            <th>Total</th>
            <th>Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Item.ItemTitle</td>
                <td>@order.Quantity</td>
                <td>@order.Total</td>
                <td>@string.Format( "{0:MM/dd/yyyy}", order.Date )</td>
            </tr>
        }
    </tbody>
</table>

<!-- Custom CSS -->
<style>
    .custom-table {
        width: 100%; /* Full width */
        margin-top: 20px; /* Spacing above table */
        border-radius: 10px; /* Rounded corners */
        overflow: hidden; /* Clip the corners */
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1); /* Subtle shadow */
    }

        .custom-table th {
            background-color: #FFD700; /* Yellow background for header */
            color: black; /* Black text for header */
            padding: 15px; /* Padding for header cells */
            text-align: left; /* Align text to the left */
        }

        .custom-table td {
            padding: 12px; /* Padding for body cells */
            border: 1px solid #dee2e6; /* Border for cells */
        }

        .custom-table tr:nth-child(even) {
            background-color: #FFF8DC; /* Light yellow background for even rows */
        }

        .custom-table tr:hover {
            background-color: #FFEFD5; /* Light goldenrod yellow on hover */
        }

        .custom-table th, .custom-table td {
            border: 1px solid #dee2e6; /* Border for both header and body cells */
        }

    h1 {
        margin-bottom: 20px; /* Spacing below the header */
        color: #333; /* Header color */
    }
</style>
